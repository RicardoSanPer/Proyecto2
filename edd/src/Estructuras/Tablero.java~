package edd.src.Estructuras;

import edd.src.Estructuras.Utilidad;

public class Tablero
{
    private Lista<Integer> casilla;
    /*
     *   1 ----- 2
     *   | \   / |
     *   |  \ /  |
     *   |   3   |
     *   |  / \  |
     *   | /   \ |
     *   4       5
     *
     */

    public Tablero()
    {
	for(int i = 0; i < 5; i++)
	{
	    casilla.add(0);
	}
    }

    public String toString()
    {
        String[] ficha = new String[5];
	int it = 0;
	for(int elemento: casilla)
	{
	    //Jugador 1 (ficha roja)
	    if(elemento == 1)
	    {
		ficha[it] = "ðŸ”´";
	    }
	    //jugador 2
	    else if
	    {
		ficha[it] = "ðŸ”·";
	    }
	    else
	    {
		ficha[it] = "[ ]";
	    }
	}
    }
}
